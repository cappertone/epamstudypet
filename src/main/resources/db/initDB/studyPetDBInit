CREATE SCHEMA IF NOT EXISTS studypet;
USE studypet;
CREATE TABLE IF NOT EXISTS Accounts
(
    accountId BIGINT,
    accountStatus ENUM ('ACTIVE', 'BANNED', 'INACTIVE'),
    PRIMARY KEY (accountId)
);
CREATE TABLE IF NOT EXISTS Developers
(
    developerId BIGINT NOT NULL AUTO_INCREMENT,
    name VARCHAR(255) NOT NULL,
    accountId BIGINT,
    PRIMARY KEY (developerId)
)
;
CREATE TABLE IF NOT EXISTS Skills
(
    skillId BIGINT NOT NULL AUTO_INCREMENT,
    skillName VARCHAR(255) NULL,
    PRIMARY KEY (skillId)
)
;
CREATE TABLE IF NOT EXISTS DeveloperSkills
(
    d_id BIGINT NOT NULL,
    sk_id BIGINT NOT NULL,
    PRIMARY KEY (d_id, sk_id),
    INDEX `devId` (d_id),
    INDEX `skID` (sk_id),
    CONSTRAINT `FK_Devs` FOREIGN KEY (sk_id)
        REFERENCES Skills (skillId) ON DELETE CASCADE,
    CONSTRAINT `FK_Skills` FOREIGN KEY (d_id)
        REFERENCES Developers (developerId) ON DELETE CASCADE
)
;
